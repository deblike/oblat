<section>
  <div class="section-header">
    <h1>Cargos</h1>
    {{link-to "Agregar cargo" "data-entry.elections.charges.new" classNames="btn"}}
  </div>
  <div class="section-content">
    {{#if model.length}}
      <div class="slat-list">
        {{#each charge in model}}
          <div class="slat-item">
            <div class="slat-content">
              <h4>{{charge.name}} {{charge.scope}}</h4>
            </div>

            <div class="slat-action">
              {{link-to "Editar" "data-entry.elections.charges.edit" charge classNames="btn"}}
              <a href="#" class="btn" {{action "remove" charge}}>Eliminar</a>
            </div>
          </div>
        {{/each}}
        {{infinity-loader infinityModel=model}}
      </div>
    {{else}}
      <div class="loading">
        {{loading-bubbles color='#0083ff' size=100}}
      </div>
    {{/if}}
  </div>
</section>
