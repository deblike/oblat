<form {{action "save" on="submit"}} class="create-event">
  <fieldset>
    <label>
      Nombre
      {{input type="text" value=model.name}}
    </label>
  </fieldset>
  <fieldset>
    <label>
      Polygono
      {{input type="text" value=model.polygon}}
    </label>
  </fieldset> 
  <fieldset>
    <label>
      Pais <!-- Select -->
      {{model-selector modelName='country' value=model.country optionLabelPath="content.name" }}
    </label>
  </fieldset>   
  <fieldset>
    <input type="submit" value="Guardar">
  </fieldset>
</form>
    
